# Shared
NODE_ENV=development

# Web
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002

# API
API_PORT=3002
CORS_ORIGINS=http://localhost:3000

# Postgres (docker-compose defaults)
POSTGRES_DB=posta_giro
POSTGRES_USER=posta
POSTGRES_PASSWORD=posta_dev_password
DATABASE_URL=postgresql://posta:posta_dev_password@localhost:5432/posta_giro

# Redis
REDIS_URL=redis://localhost:6379

# Sessions (set strong values in prod)
SESSION_SECRET=replace_me_with_long_random
